generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Study {
  id           Int      @id @default(autoincrement())
  name         String
  description  String?
  background   String?
  passwordHash String
  creatorNick  String
  totalPoints  Int      @default(0)
  createdAt    DateTime @default(now())

  focusStartTime  DateTime?
  focusTargetTime Int?

  habits Habit[]
  emojis Emoji[]
}

model Habit {
  id        Int           @id @default(autoincrement())
  studyId   Int
  name      String
  createdAt DateTime      @default(now())
  study     Study         @relation(fields: [studyId], references: [id], onDelete: Cascade)
  records   HabitRecord[]
  isActive  Boolean       @default(true)
}

model HabitRecord {
  id         Int    @id @default(autoincrement())
  habitId    Int
  habit      Habit  @relation(fields: [habitId], references: [id], onDelete: Cascade)
  recordDate String
}

model Emoji {
  id      Int    @id @default(autoincrement())
  studyId Int
  emoji   String
  count   Int    @default(0)
  study   Study  @relation(fields: [studyId], references: [id], onDelete: Cascade) // TODO: onDelete: Cascade 사용해 주세요~
}
